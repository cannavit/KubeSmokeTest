{
  "name": "create-smktest",
  "version": "0.0.0",
  "description": "Smoketest suites gerentator in jest format",
  "main": "src/index.js",
  "bin": {
    "create-smktest": "bin/create-smktest"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest ./src/services",
    "passTest": "node ./src/breakPipeline.js",
    "dev": "ts-node-dev --respawn --transpile-only ./src/app.ts",
    "tdd": "jest --watchAll --testPathPattern=/createSmktest",
    "tdd2": "jest --watchAll --testPathPattern=/smokeTest_suites",
    "tdd3": "jest --watchAll --testPathPattern=/smokeTest_suites",
    "jest": "jest --bail --watchAll ",
    "build": "tsc && cp -r ./src/serviceV2/suiteGenerator/src/templates ./build/serviceV2/suiteGenerator/src",
    "smoke-test": "jest --watchAll --testPathPattern=/smokeTest_kubernetes --coverage=false"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "keywords": [
    "smoketest",
    "smoke",
    "test",
    "smktest",
    "jest",
    "automation",
    "suites",
    "apis",
    "backend",
    "nodejs"
  ],
  "author": "Cannavit",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^0.13.0",
    "@octokit/rest": "^18.6.7",
    "arg": "^5.0.0",
    "assert": "^2.0.0",
    "axios": "^0.21.4",
    "axios-curlirize": "^1.3.7",
    "base-64": "^1.0.0",
    "chalk": "^4.1.1",
    "child_process": "^1.0.2",
    "dotenv": "^10.0.0",
    "esm": "^3.2.25",
    "execa": "^5.1.1",
    "express": "^4.17.1",
    "figlet": "^1.5.0",
    "generate-unique-id": "^2.0.1",
    "github-api": "^3.4.0",
    "inquirer": "^8.0.0",
    "inquirer-table-prompt": "^0.2.1",
    "install": "^0.13.0",
    "jest": "^27.0.4",
    "linebyline": "^1.3.0",
    "link": "^0.1.5",
    "listr": "^0.14.3",
    "listr-update-renderer": "^0.5.0",
    "listr2": "^3.12.2",
    "lodash": "^4.17.21",
    "make-error": "^1.3.6",
    "ncp": "^2.0.0",
    "ping": "^0.4.1",
    "pkg-install": "^1.0.0",
    "promisify": "0.0.3",
    "readline": "^1.3.0",
    "shelljs": "^0.8.4",
    "slashes": "^2.0.2",
    "smktest-utils": "^1.1.2",
    "swagger-smktest": "^0.2.5",
    "util.promisify": "^1.1.1",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "jest-cli": "^27.2.4",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "jest": {
    "bail": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/smokeTest_suites",
      "/src/test",
      "/src/services"
    ]
  }
}
